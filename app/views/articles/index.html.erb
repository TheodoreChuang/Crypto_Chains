<h1>Welcome <%= current_user.name if user_signed_in? %></h1>

<div>
<%= current_user.inspect %>
</div>
<div>
<%#= user_session.inspect %>
</div>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Votes</th>
      <th>Title</th>
      <th>Description</th>
      <th>Content</th>
      <th>Source</th>
      <th>Source date</th>
      <th>Views</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td>
          Likes <%= article.get_upvotes.size %> | 
          DisLike <%= article.get_downvotes.size %>
        </td>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= article.content %></td>
        <td><%= article.source %></td>
        <td><%= article.source_date %></td>
        <td><%= article.views %></td>
        <td><%= article.user %></td>
        <td><%= link_to 'Show', article %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_article_path(article) if current_user.id  == article.user_id %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
