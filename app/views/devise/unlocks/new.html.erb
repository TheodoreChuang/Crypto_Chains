<h4 class="blue-text lighten-2">Resend unlock instructions</h4>

<div class="row">
  <%= form_for(resource, class: "col s12", as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="row">
      <div class="input-field col s12">
        <%= f.label :email %>
        <%= f.email_field :email, class: "validate", autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <button class="actions btn waves-effect waves-light" type="submit" name="action">Resend unlock instructions
      <i class="material-icons right">send</i>
    </button>
  <% end %>

</div>
<%= render "devise/shared/links" %>
