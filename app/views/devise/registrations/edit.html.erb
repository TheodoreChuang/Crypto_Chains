<h4 class="blue-text lighten-2">Edit Profile</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

<div class="row">
  <form class="col s12">
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :name %>
        <%= f.text_field :name, class: "validate", autofocus: true, autocomplete: "name" %>
      </div>
    </div>

    <div class="row"> 
      <div class="input-field col s12">
        <%= f.label :bio %>
        <%= f.text_area :bio, class: "materialize-textarea validate", autofocus: true, autocomplete: "bio" %>
      </div>
    </div>

    <div class="row">      
      <div class="input-field col s12">
        <%= f.label :email %>
        <%= f.email_field :email, class: "validate", autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <div class="switch">
          <%= f.label :display_email %>
          <label>
            No
            <%= f.check_box :display_email, autofocus: true, autocomplete: "display_email" %>
            <span class="lever"></span>
            Yes
          </label>
        </div>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="row">
      <div class="input-field col s12">
        <%= f.label :password %>
        <%= f.password_field :password, class: "validate", autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <span class="helper-text">(leave blank if you don't want to change it - <%= @minimum_password_length %> characters minimum)</span>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: "validate", autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.label :current_password %>
        <%= f.password_field :current_password, class: "validate", autocomplete: "current-password" %>
         <span class="helper-text">(we need your current password to confirm your changes)</span>
      </div>
    </div>

    <button class="actions btn waves-effect waves-light" type="submit" name="action">Update
      <i class="material-icons right">send</i>
    </button>
    <% end %>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"waves-effect waves-teal btn-flat" %></p>

    <%= link_to "Back", :back, class:"waves-effect waves-teal btn-flat" %>
  </div>
</div>
