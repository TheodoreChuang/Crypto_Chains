<h4 class="blue-text lighten-2">Log In</h4>

<div class="row">
  <%= form_for(resource, class: "col s12", as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :email %>
        <%= f.email_field :email, class: "validate", autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.label :password %>
        <%= f.password_field :password, class: "validate", autocomplete: "current-password" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="row">
        <div class="input-field col s12">
          <div class="switch">
            <%= f.label :remember_me %>
            <label>
              No
              <%= f.check_box :remember_me, autofocus: true, autocomplete: "remember_me" %>
              <span class="lever"></span>
              Yes
            </label>
          </div>
        </div>
      </div>
    <% end -%>

    <button class="actions btn waves-effect waves-light" type="submit" name="action">Log In
      <i class="material-icons right">chevron_right</i>
    </button>
  <% end %>
  
<%= render "devise/shared/links" %>

